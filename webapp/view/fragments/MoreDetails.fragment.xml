<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="moreBankDetails" title="{i18n>confDetail}">
        <VBox id="vBox1" class="sapUiSmallMargin">

            <HBox id="hBox1">
                <Label id="bankAccNum" text="{i18n>accNum}" />
                <Text text="3884730908098" id="bankAccVal" class="sapUiSmallMarginBegin" />
            </HBox>

            <HBox id="hBox2">
                <Label id="lblAcHolderNameId" text="{i18n>accHName}" />
                <Text id="idAcHolderNameId" text="Samarendra Kumar Mitra" class="sapUiSmallMarginBegin" />
            </HBox>

            <HBox id="hBox3">
                <Label id="lblIFSCId" text="{i18n>ifsCode}" class="sapUiSmallMarginEnd" />
                <Text id="idIFSCValue" text="0000000****" />
            </HBox>

            <HBox id="hBox4">
                <Label id="lblCustId" text="{i18n>custID}" class="sapUiSmallMarginEnd"/>
                <Text id="idCustValue" text="1234*****" />
            </HBox>

            <HBox id="hBox5">
                <Label id="lblAdressId" text="{i18n>adress}" class="sapUiSmallMarginEnd" />
                <Text id="idAdressValue" text="**/** ********* *********" />
            </HBox>
        </VBox>

        <beginButton>
            <Button id="closeBtn" text="{i18n>btnClose}" press=".onCloseBankDetails"></Button>
        </beginButton>

    </Dialog>

</core:FragmentDefinition>